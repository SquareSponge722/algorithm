#include <bits/stdc++.h>

using namespace std;

const int N = 8;
const int M = 1000000 + 5;
const int INF = 0x3f3f3f3f;

vector<int> g[N];
int n, m;
char t;
long long f[N][2][2];
long long p[N];

int main() {
	freopen("defense.in", "r", stdin);
	freopen("defense.out", "w", stdout);
	scanf("%d %d %c", &n, &m, &t);
	for (int i = 1; i <= n; i++) {
		scanf("%lld", &p[i]);
	}
	for (int i = 1; i < n; i++) {
		int u, v;
		scanf("%d %d", &u, &v);
		g[u].push_back(v);
		g[v].push_back(u);
	}
	while (m--) {
		int a, x, b, y;
		scanf("%d %d %d %d", &a, &x, &b, &y);
		memset(f, INF, sizeof f);
		dfs(1, 0);
		long long ans = INF;
}
